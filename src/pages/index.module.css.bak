/**
 * CSS files with the .module.css suffix will be treated as CSS modules
 * and scoped locally.
 */

.heroBanner {
  padding: 4rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
}

@media screen and (max-width: 996px) {
  .heroBanner {
    padding: 2rem;
  }
}

.buttons {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Menghilangkan space berlebih di section Support */
.supportSection {
  /* Atas 2rem, Bawah 0.5rem untuk merapatkan dengan footer */
  padding: 2rem 0 0.5rem 0; 
  /* Menggunakan warna background gelap default Docusaurus */
  background-color: var(--ifm-background-color); 
}

/* Merapatkan jarak antar kartu */
.cardCol {
  margin-bottom: 0.5rem; /* Dari 2rem menjadi 0.5rem */
}

/* Mengatur warna kartu agar sedikit lebih terang dari background (Glassmorphism style) */
.customCard {
  height: 100%;
  /* Warna background kartu di mode gelap */
  background-color: #1b1b1d; 
  border: 1px solid #2e2e30;
  border-radius: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

/* Hilangkan margin default di dalam row */
.supportSection :global(.row) {
  margin-bottom: 0;
}

/* Jika space di footer masih terlalu lebar, gunakan ini */
:global(.footer) {
  padding-top: 1rem !important;
}
