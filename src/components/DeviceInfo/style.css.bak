/* =====================
   THEME COLOR
===================== */

/* Light Mode */
:root {
  --bg-main: #ffffff;
  --card-bg: #ffffff;

  --text-main: #111;
  --text-muted: #777;

  --border: #eee;

  --shadow: 0 2px 10px rgba(0, 0, 0, 0.08);

  --bar-bg: #eee;

  --blue: #4da3ff;
  --orange: #ffa726;
  --gray: #bdbdbd;
}

/* Dark Mode */
[data-theme="dark"] {
  --bg-main: #121212;
  --card-bg: #1e1e1e;

  --text-main: #f1f1f1;
  --text-muted: #aaa;

  --border: #2a2a2a;

  --shadow: 0 2px 10px rgba(0, 0, 0, 0.6);

  --bar-bg: #2a2a2a;

  --blue: #6ab0ff;
  --orange: #ffb74d;
  --gray: #888;
}

/* =====================
   CONTAINER
===================== */

.device-container {
  max-width: 900px;
  margin: auto;
  padding: 20px;
  background: var(--bg-main);
  color: var(--text-main);
}

/* =====================
   TITLE
===================== */

.device-title-main {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 20px;
  text-align: center;
}

/* =====================
   GRID (TETAP 2 KOLOM)
===================== */

.device-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* Tetap kanan-kiri */
  gap: 16px;
  margin-bottom: 25px;
}

/* =====================
   CARD
===================== */

.device-card {
  background: var(--card-bg);
  border-radius: 14px;
  padding: 16px;
  box-shadow: var(--shadow);
  text-align: center;
}

/* =====================
   LABEL & VALUE
===================== */

.device-label {
  font-size: 13px;
  color: var(--text-muted);
  margin-bottom: 6px;
}

.device-value {
  font-size: 18px;
  font-weight: 600;
}

/* =====================
   STORAGE BAR
===================== */

.storage-bar {
  width: 100%;
  height: 8px;
  background: var(--bar-bg);
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 10px;
}

.storage-used {
  display: flex;
  height: 100%;
}

.storage-blue {
  background: var(--blue);
}

.storage-orange {
  background: var(--orange);
}

.storage-gray {
  background: var(--gray);
}

/* =====================
   SPEC CARD
===================== */

.spec-card {
  background: var(--card-bg);
  border-radius: 14px;
  padding: 18px;
  box-shadow: var(--shadow);
}

/* =====================
   SPEC ROW
===================== */

.spec-row {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  border-bottom: 1px solid var(--border);
  font-size: 15px;
}

.spec-row:last-child {
  border-bottom: none;
}

.spec-name {
  color: var(--text-muted);
}

.spec-value {
  font-weight: 600;
}