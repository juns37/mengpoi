:root {
  --ifm-color-primary: #4cbbd9;
  --ifm-color-primary-dark: #3faac7;
  --ifm-color-primary-darker: #379fbb;
  --ifm-color-primary-darkest: #2d839a;
  --ifm-color-primary-light: #5fc4df;
  --ifm-color-primary-lighter: #6bcbe3;
  --ifm-color-primary-lightest: #8ad8ea;

  --ifm-code-font-size: 95%;
  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.1);
}

/* Dark Mode */
[data-theme='dark'] {
  --ifm-color-primary: #4cbbd9;
  --ifm-color-primary-dark: #3faac7;
  --ifm-color-primary-darker: #379fbb;
  --ifm-color-primary-darkest: #2d839a;
  --ifm-color-primary-light: #5fc4df;
  --ifm-color-primary-lighter: #6bcbe3;
  --ifm-color-primary-lightest: #8ad8ea;

  --docusaurus-highlighted-code-line-bg: rgba(0, 0, 0, 0.3);
}


/* === Marble Card List === */

.marble-list {
  display: grid;
  gap: 16px;
  margin-top: 20px;
}

.marble-card {
  background: #1f2937;
  border-radius: 14px;
  padding: 18px;

  /* CENTER */
  display: flex;
  flex-direction: column;
  align-items: center;      /* Tengah kiri-kanan */
  justify-content: center; /* Tengah atas-bawah */
  text-align: center;      /* Text rata tengah */

  gap: 8px;

  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
  text-decoration: none;
  color: inherit;
  transition: all 0.2s ease;
}

.marble-card:hover {
  transform: translateY(-2px);
  background: #273549;
}

.marble-icon {
  font-size: 32px;
}

.marble-title {
  margin: 0;
  font-size: 18px;
}

.marble-desc {
  margin: 0;
  opacity: 0.7;
  font-size: 14px;
}